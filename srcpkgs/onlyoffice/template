### Template for OnlyOffice

pkgname=onlyoffice
version=8.3.3
revision=1

archs="x86_64"
depdends="libstdc++ curl xdg-utils dejavu-fonts-ttf GConf"
hostmakedepends="tar xz"

short_desc="Editor suite"
license="AGPL-3.0"
homepage="https://www.onlyoffice.com/"
nostrip=yes

distfiles="https://github.com/ONLYOFFICE/DesktopEditors/releases/download/v8.3.3/onlyoffice-desktopeditors_amd64.deb"
checksum=12e50f6dafdb56030ea94631b7ec7c8f0b5163d47d6938cea38facaf6822a13c


### Script
do_extract() {
        mkdir -p ${DESTDIR}
        ar x ${XBPS_SRCDISTDIR}/${pkgname}-8.3.3/onlyoffice-desktopeditors_amd64.deb
}

do_install() {
        tar xf data.tar.xz -C ${DESTDIR}

	rm -f etc/cron.daily/onlyoffice

}
